<h1>Posts</h1>

<% if @posts.any? %>
	<ul>
		<% @posts.each do |post| %>
			<li>
				<%= link_to post.image, post_path(post) %>
				<br>
					<%= link_to post_path(post) do %>
						<% if post.photos.attached? %>
							<%= image_tag post.photos.first, width: 100, height: 100%>
						<%else%>
							<p>No photo found. </p>
						<%end%>
					<%end%>
			</li>
		<%end%>
	</ul>
<%else%>
	<p>No posts found.</p>
<%end%>
<br>
<%= link_to 'Create New Post', new_post_path %>